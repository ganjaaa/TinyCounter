{
    "name": "ganjaaa/TinyCounter",
    "type": "library",
    "description": "A small scale counter with flatfile DB",
    "license": "MIT",
    "keywords": ["composer", "ganjaaa", "counter", "counting", "flatfile", "sqlite"],
    "homepage": "https://github.com/ganjaaa/TinyCounter",
    "authors": [
        {
            "name": "Felix Kurth",
            "email": "it@wasmitleder.de"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "php": ">=5.6.0",
        "phpunit/phpunit": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Ganjaaa\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ganjaaa/TinyCounter"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "php src/TinyCounter.php"
        ]
    }
}
